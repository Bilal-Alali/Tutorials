Subject: [PATCH 1/2] add debugging message in ipv6

---
 sys/net/gnrc/network_layer/ipv6/gnrc_ipv6.c | 6 ++++++
 1 file changed, 6 insertions(+)

diff --git a/sys/net/gnrc/network_layer/ipv6/gnrc_ipv6.c b/sys/net/gnrc/network_layer/ipv6/gnrc_ipv6.c
index ebb285c..ded7eb0 100644
--- a/sys/net/gnrc/network_layer/ipv6/gnrc_ipv6.c
+++ b/sys/net/gnrc/network_layer/ipv6/gnrc_ipv6.c
@@ -926,6 +926,12 @@ static void _receive(gnrc_pktsnip_t *pkt)
 
             DEBUG("ipv6: forward packet to next hop\n");
 
+            char addr_str[IPV6_ADDR_MAX_STR_LEN];
+            printf("IPv6 ROUTER: forward from src = %s, to dst = %s\n",
+                ipv6_addr_to_str(addr_str, &(hdr->src), sizeof(addr_str)),
+                ipv6_addr_to_str(addr_str, &(hdr->dst), sizeof(addr_str)) );
+
+
             /* pkt might not be writable yet, if header was given above */
             ipv6 = gnrc_pktbuf_start_write(ipv6);
             if (ipv6 == NULL) {
